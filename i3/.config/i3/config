# i3 config file (v4)

### Variables
set $mod                             Mod4
set $smod                            Shift

set $key_left                        h
set $key_down                        j 
set $key_up                          k
set $key_right                       l

set $window_font                     pango:monospace 8 
set $window_gap_width                0 
set $window_gap_height               0
set $window_border_size              1

set $terminal                        alacritty
set $browser                         firefox 
set $app_launcher                    i3-dmenu-desktop
set $compositor                      picom

set $bar_status_command              i3status
set $bar_mode                        dock
set $bar_position                    top 
set $bar_separator                   " - "
set $bar_tray_output                 full

set $wm_bg                           #2E3440
set $wm_border_active_bg             #81A1C1
set $wm_border_active_fg             #3B4252
set $wm_border_inactive_bg           #3B4252
set $wm_border_inactive_fg           #D8DEE9

set $bar_bg                          #3B4252
set $bar_fg                          #D8DEE9
set $bar_statusline                  #D8DEE9
set $bar_separator                   #D8DEE9

set $bar_ws_focused_bg               #A3BE8C
set $bar_ws_focused_fg               #2E3440
set $bar_ws_active_bg                #EBCB8B
set $bar_ws_active_fg                #2E3440
set $bar_ws_inactive_bg              #BF616A
set $bar_ws_inactive_fg              #2E3440
set $bar_ws_urgent_bg                #D08770
set $bar_ws_urgent_fg                #2E3440


### Apps
bindsym $mod+Return exec $terminal 
bindsym $mod+d exec --no-startup-id "$app_launcher"

### Modify windows
font $window_font 
floating_modifier $mod

default_border pixel $window_border_size
default_floating_border pixel $window_border_size 
smart_borders on

gaps horizontal $window_gap_width
gaps vertical   $window_gap_height
smart_gaps on

bindsym $mod+Shift+q kill
bindsym $mod+f fullscreen toggle

bindsym $mod+$key_left focus left
bindsym $mod+$key_down focus down
bindsym $mod+$key_up focus up
bindsym $mod+$key_right focus right

bindsym $mod+$smod+$key_left move left
bindsym $mod+$smod+$key_down move down
bindsym $mod+$smod+$key_up move up
bindsym $mod+$smod+$key_right move right

# horizontal and vertical orientation splits
bindsym $mod+b split h 
bindsym $mod+v split v

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym $key_left resize shrink width 10 px or 10 ppt
        bindsym $key_up resize grow height 10 px or 10 ppt
        bindsym $key_down resize shrink height 10 px or 10 ppt
        bindsym $key_right resize grow width 10 px or 10 ppt
        
        # exit resize mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}


### Startup
# set wallpaper
exec --no-startup-id feh --bg-scale ~/wallpapers/nebula-1.png

# set monitors
exec --no-startup-id ~/.screenlayout/setup_monitors.sh

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex-autostart --autostart --environment i3

# network manager gui for system tray
exec --no-startup-id nm-applet

# redshift
exec --no-startup-id redshift


### Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10


### Colors
# class                 border  bground text    indicator child_border
client.focused          #B7CEB0 #A3D6A9 #FFFFFF #B7CEB0   #A3D6A9
client.focused_inactive #8C8C8C #4C4C4C #FFFFFF #4C4C4C   #8C8C8C
client.unfocused        #4C4C4C #222222 #888888 #292D2E   #222222
client.urgent           #EC69A0 #DB3279 #FFFFFF #DB3279   #DB3279
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C

client.background       #FFFFFF


### i3status
bar {
	status_command   $bar_status_command
    position         $bar_position
	#mode             $bar_mode
	#tray_output      $bar_tray_output

    colors {
        background #242933
        statusline #BBBDAF
        separator  #BBBDAF

        focused_workspace  #B7CEB0 #B7CEB0 #242933
        active_workspace   #A3D6A9 #A3D6A9 #242933
        inactive_workspace #8C8C8C #4C4C4C #888888
        urgent_workspace   #EC69A0 #DB3279 #FFFFFF
        binding_mode       #b691d3 #A07CBC #FFFFFF
    }
}


### Misc
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
